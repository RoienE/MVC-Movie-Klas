
@{
    Layout = null;
}
@using MvcMovie.Library;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/MijnStijl.css" />
    <title>Calc Andere Pagina Plus Koekjes</title>

</head>

<body>
    <h2>Andere pagina</h2><hr />
    Het resultaat van de bewerking is @ViewData[MyUtilities.SW_CalcAnderePagina_Resultaat].<hr />
    Teruggaan naar @Html.ActionLink("mijn Hallo Wereld", "Welcome", "HelloWorld"). <br />   @* <a href="~/Views/HelloWorld/Welcome.cshtml">vorige pagina</a> *@
    @* 08/02/2018 *@

    <form asp-controller="HelloWorld" method="post">
        <div id="idCookies">
            <div class="row">
                <div class="column">
                    Content cookie: <input type="text" id="txbCookiesContent" name="txbCookiesContent" /> @* value=@ViewData["Getal 1"] *@
                </div>
                <div class="column">

                </div>
                <div class="column">

                </div>
            </div>
            <div class="row">
                <div class="column">
                    <input type="submit" value="Make cookie" id="btnMakeCookie" formaction="@Url.Action("makeCookie", "HelloWorld")" />
                    <!-- Om een apenstraatje in comment te laten herkennen is het: @@ ||
            @@Url.Action("DoeBewerking", "HelloWorld")" -->
                </div>
                <div class="column">
                    <input type="submit" value="Check cookie" id="btnCheckCookie" formaction="@Url.Action("checkCookie", "HelloWorld")" />
                </div>
                <div class="column">
                    <input type="submit" value="Delete cookie" id="btnDeleteCookie" formaction="@Url.Action("deleteCookie", "HelloWorld")" />
                </div>
            </div>
            <textarea>
                @{ 
                    if (ViewData["txaResult"] == null)
                    {
                        @Html.Raw("(Nog niets bepaald.)");
                    }
                    else
                    {
                        @Html.Raw(@ViewData["txaResult"].ToString());
                    }
                }
            </textarea>
        </div>
    </form>

</body>

</html>
