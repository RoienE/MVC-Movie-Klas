    </script>
    <title>Welcome om @DateTime.Now.ToLongTimeString()</title>
</head>
<body bgcolor="@kUsingBGColor" onload="startTime()">
    
    <center><h1>Mijn hallo wereld welkomstpagina : FUCK INTERNET EXPLORER</h1></center><hr />
    <form asp-controller="HelloWorld" method="post">
        <table border="1" width="80%" align="center">
            <tr>
                <td>
                    De tijd is:
                </td>
                <td>
                    <div id="time"></div>
                </td>
                <td colspan="2">
                    Server Side
                </td>
            </tr>
            <tr>
                <td>Getal 1: </td>
                <td>
                    <input type="text" id="txbGetal01" name="txbGetal01" value=@ViewData["Getal 1"] />
                </td>
                <td colspan="2">Dezelfde!</td>
            </tr>
            <tr>
                <td>Getal 2: </td>
                <td><input type="text" id="txbGetal02" name="txbGetal02" value=@ViewData["Getal 2"] /></td>
                <td colspan="2">Dezelfde!</td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center;"><input type="button" value="Toon resultaat" onclick="telOp()" /></td>
            </tr>
            <tr>
                <td colspan="2">
                    <div id="divresultaat" style="font-size:xx-large">
                        @ViewData["Resultaat"]

                    </div>
                </td>
                <td colspan="2"><input type="submit" value="Serverresultaat" id="btnServerTest" formaction="@Url.Action("DoeBewerking", "HelloWorld")" /></td><br />
                <td colspan="2"><input type="submit" value="Bewerking naar andere pagina" id="btnNaarAnderePagina" formaction="@Url.Action("CalcResultOtherPage", "HelloWorld")" /></td>
            </tr>
            <tr>
                <td colspan="2">@kUsingBGColor</td>
                <td colspan="2">
                    <input type="button" id="btnTest" value="Testt" onclick="alert('Mijn JavaScript Hallo wereld!');" />
                </td>
            </tr>


            <tr>
                <td>Vul een tekst in: </td>
                <td><input type="text" id="inTeVullenText" name="inTeVullenText" /></td>
            </tr>
            <tr>
                <td><input type="checkbox" id="chkboxIMG" name="chkboxIMG" value="Koekje?" /></td>
                <td><input type="submit" id="btnAantalKeerKopieren" value="Kopieer" formaction="@Url.Action("Kopieer", "HelloWorld")" /></td>
            </tr>
        </table>

        @if (ViewData["AantalKeer"] != null)
        {
            int ak = (int)ViewData["AantalKeer"];

            if ((int)ViewData["OnOrOff"] == 0)
            {

                @for (int kTeller = 0; kTeller < ak; kTeller++)
                {
                    @ViewData["Text"] <br />

                }
            }

            else if ((int)ViewData["OnOrOff"] == 1)
            {

                @for (int kTeller = 0; kTeller < ak; kTeller++)
                {
                     <img src="~/images/prod-vanilla-chock-chip.png" /><br />
                }
            }

        }
    </form>

</body>
</html>
